"use strict"

const boton = document.getElementById("boton"); //variable para guardar la id BOTON
const parrafo = document.getElementById("parrafo");//variable para guardar la id PARRAFO


//funcion que da como resultado la apertura de una ventana
boton.addEventListener("click" , function(){
    window.open("http://www.google.com" , "ventana1" , "width=800,height=800,scrollbars=SI");
})

//funcion para cambiar de color el texto al pasar el cursor sobre el
parrafo.addEventListener("mousemove" , function(){
    parrafo.style.color = "blue";
})

//funcion para cambiar de color el texto al sacar el cursor sobre el
parrafo.addEventListener("mouseout" , function(){
    parrafo.style.color = "black";
})
